<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- side bar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- endsidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- navbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- end navbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../partials/flash_message.ejs') %> <% if(action ==
        "view") { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#show-item"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Show Item</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#add-item"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Add Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show_table_item -->
          <%- include('show_table_item.ejs') %> <%- include('add_item.ejs') %>
        </div>
        <!-- table  -->
        <% } else if (action == 'show-image'){ %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" href="#show-image" role="tab"
              >Show Image</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show_table_item -->
          <%- include('show_image_item.ejs') %>
        </div>
        <% } else { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" href="#edit-item" role="tab"
              >Edit Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show_table_item -->
          <%- include('edit_item.ejs') %>
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/script.ejs') %>
<script>
  CKEDITOR.replace('description');
</script>

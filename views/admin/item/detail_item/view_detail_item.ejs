<%- include('../../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- side bar -->
  <%- include('../../../partials/sidebar.ejs') %>
  <!-- endsidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- navbar -->
      <%- include('../../../partials/navbar.ejs') %>
      <!-- end navbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../../partials/flash_message.ejs') %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#show-feature"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Show Feature</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#show-activity"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Show Activity</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show_table_item -->
          <%- include('show_feature.ejs') %> <%- include('show_activity.ejs') %>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>
<%- include('show_modal_feature.ejs') %> <%- include('show_modal_activity.ejs')
%> <%- include('../../../partials/script.ejs') %>
<script>
  $(document).ready(function () {
    $('#dataTableActivity').DataTable();
  });
  CKEDITOR.replace('description');
</script>
<script>
  $('#dataTable').on('click', '.button-update', function () {
    const id = $(this).data('id');
    const name = $(this).data('name');
    const qty = $(this).data('qty');
    const image = $(this).data('image');
    $('#edit-modal-feature').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.qty').val(qty);
    $('.image').val(image);
  });
  $('#dataTableActivity').on('click', '.button-update', function () {
    const id = $(this).data('id');
    const name = $(this).data('name');
    const type = $(this).data('type');
    const image = $(this).data('image');
    $('#edit-modal-activity').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.type').val(type);
    $('.image').val(image);
  });
</script>

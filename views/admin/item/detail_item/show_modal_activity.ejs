
<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal-activity"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-modal-bank">Update Activity</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/admin/item/update/activity?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="hidden" name="id" id="id" class="id">
            <input type="hidden" name="itemId" value="<%= itemId %>">
            <label for="name">Nama</label>
            <input
              type="text"
              class="form-control mb-2 name"
              id="name"
              name="name"
              placeholder="Enter Name"
              required
            />
            <label for="type">Type</label>
            <input
              type="text"
              class="form-control mb-2 type"
              id="type"
              name="type"
              placeholder="Enter type"
              required
            />
            <label for="imageUrl">Image</label>
            <input
              type="file"
              class="form-control mb-2 image"
              id="imageUrl"
              name="imageUrl"
            />
            
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="submit" class="btn btn-primary">Update</button>
       
      </div>
 </form>
    </div>
  </div>
</div>

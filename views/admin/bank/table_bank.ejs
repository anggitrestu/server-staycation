<h1 class="h3 m-0 mb-2 font-weight-bold text-primary">Bank</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal-bank"
    >
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name Bank</th>
            <th>Nomor Rekening</th>
            <th>Nama Pemilik</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for ( let i=0; i< bank.length ; i++ ) {%>
          <tr>
            <td><%= i+1 %></td>
            <td><%= bank[i].nameBank %></td>
            <td><%= bank[i].nomorRekening %></td>
            <td><%= bank[i].name %></td>
            <td>
              <img
                src="http://admin-stay-cation.herokuapp.com/<%= bank[i].imageUrl %>"
                alt="image url"
                width="70px"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%= bank[i]._id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn-sm btn-warning btn-circle button-update"
                  data-id="<%= bank[i]._id %>"
                  data-name="<%= bank[i].name %>"
                  data-namebank="<%= bank[i].nameBank %>"
                  data-nomorrekening="<%= bank[i].nomorRekening %>"
                  data-image="http://admin-stay-cation.herokuapp.com/<%= bank[i].imageUrl %>"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button type="submit" class="btn btn-sm btn-danger btn-circle">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="card shadow mb-4">
  <div
    class="card-header py-3 d-flex justify-content-between align-items-center"
  >
    <h6 class="m-0 font-weight-bold text-primary">detail booking</h6>
    <a href="/admin/booking" class="btn-sm btn-dark p-2">Back To Booking</a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <!-- form -->
      <img
        src="/<%= booking.payments.proofPayment %>"
        alt="foto produk"
        style="width: 100%; display: block"
      />
      <div class="d-flex align-items-center m-2 pd-3">
        <% if(booking.payments.status == "Proses"){ %>
        <form
          action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
          method="POST"
          class="mr-2"
        >
          <button type="submit" class="btn btn-sm btn-success">
            <i class="fas fa-check"></i> Confirmation
          </button>
        </form>
        <form
          action="/admin/booking/<%= booking.id %>/REJECT?_method=PUT"
          method="POST"
        >
          <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-times"></i> Reject
          </button>
        </form>
        <% } %>
      </div>
    </div>
    <div class="col-md-8 pt-4 pr-4">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTableActivity"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Name Member</th>
              <th>Total</th>
              <th>Bank Form</th>
              <th>Title</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= booking.memberId.firstName %> <%= booking.memberId.lastName
                %>
              </td>
              <td>$ <%= booking.total %></td>
              <td><%= booking.payments.bankFrom %></td>
              <td><%= booking.itemId.title %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
